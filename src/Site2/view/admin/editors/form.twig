{% extends "layout.twig" %}

{% block content %}
<div class="admin-container">
        {% include 'admin/menu.twig' with {'current_page': 'editors'} %}
        
        <div class="admin-content">
    
    <h1>{{ item ? 'Modifier' : 'Ajouter' }} un éditeur</h1>
    <form method="post" class="admin-form">
        <div class="form-group">
            <label for="name">Nom</label>
            <input type="text" id="name" name="name" value="{{ item.name|default('') }}" required>
        </div>
        <div class="form-group">
            <label for="user_id">Utilisateur associé</label>
            <select id="user_id" name="user_id" required>
                {% for user in users %}
                    <option value="{{ user.id }}" {{ item and item.user_id == user.id ? 'selected' : '' }}>
                        {{ user.username }}
                    </option>
                {% endfor %}
            </select>
        </div>
        <button type="submit" class="btn btn-primary">{{ item ? 'Modifier' : 'Ajouter' }}</button>
    </form>
    </div>
    </div>
{% endblock %}