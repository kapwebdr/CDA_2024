{% extends "layout.twig" %}

{% block content %}
    <h2>Bienvenue sur Game Horizon</h2>
    <p>Découvrez notre sélection de jeux vidéo !</p>

    <div class="featured-games">
        <h3>Jeux à la une</h3>
        <div class="game-grid">
            {% for game in featured_games %}
                {% include 'components/card.twig' with {
                    'card_link': "/game/#{game.id}",
                    'card_title': game.title,
                    'card_text': game.description,
                    'card_image': game.image_url,
                    'card_price': game.price,
                    'button_basket': true,
                    'game_id': game.id
                } %}
            {% endfor %}
        </div>
    </div>

    <a href="/games" class="btn-blue">Voir le catalogue complet</a>
{% endblock %}
