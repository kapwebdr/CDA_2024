{% extends "layout.twig" %}

{% block content %}
    <h2>Bienvenue sur Game Horizon</h2>
    <p>Découvrez notre sélection de jeux vidéo !</p>

    <div class="featured-games">
        <h3>Jeux à la une</h3>
        <div class="game-grid">
            {% for game in featured_games %}
                <div class="game-card">
                    <img src="{{ game.image_url }}" alt="{{ game.title }}" class="game-image">
                    <div class="game-card-content">
                        <h3>{{ game.title }}</h3>
                        <p>{{ game.description|length > 100 ? game.description|slice(0, 100) ~ '...' : game.description }}</p>
                        <p class="price">{{ game.price }} €</p>
                        <button class="btn-green add-to-cart" data-game-id="{{ game.id }}">
                            <i class="fas fa-shopping-cart"></i> Ajouter au panier
                        </button>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <a href="/games" class="btn-blue">Voir le catalogue complet</a>
{% endblock %}
